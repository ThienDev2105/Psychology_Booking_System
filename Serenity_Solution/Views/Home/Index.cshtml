        document.addEventListener('DOMContentLoaded', function() {
        const askTab = document.getElementById('askTab');
        const contactSection = document.querySelector('.contact-section');

        function scrollToContact(e) {
            if (e) e.preventDefault();

            // Thêm class 'visible' để kích hoạt hiệu ứng
            contactSection.classList.add('visible');

            const contactPosition = contactSection.getBoundingClientRect().top + window.pageYOffset - 100; // Trừ đi 100px để không bị dính sát trên cùng

            window.scrollTo({
                top: contactPosition,
                behavior: 'smooth'
            });

            // Focus vào trường đầu tiên của form
            setTimeout(() => {
                const firstInput = contactSection.querySelector('input');
                if (firstInput) firstInput.focus();
            }, 500);
        }
        askTab.addEventListener('click', scrollToContact);
        // Kiểm tra hash khi trang load
        const hash = window.location.hash;
        if (hash === '#contact') {
            setTimeout(scrollToContact, 100); // Thêm delay nhỏ để đảm bảo trang đã load xong
        }

        // Xử lý khi click từ trang khác
        if (window.location.pathname === '/Home/Index' && hash === '#contact') {
            setTimeout(scrollToContact, 300); // Delay dài hơn khi chuyển từ trang khác
        }
    });

        window.addEventListener('hashchange', function() {
        if (window.location.hash === '#contact') {
            scrollToContact();
        }
    });


</script>


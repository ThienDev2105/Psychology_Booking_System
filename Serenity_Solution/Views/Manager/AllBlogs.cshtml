@model List<BlogViewModel>

@{
    ViewBag.Title = "Danh sách các blog";
    int currentPage = ViewBag.CurrentPage;
    int totalPages = ViewBag.TotalPages;
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

<h2 class="mb-4">Danh sách blog đang chờ duyệt</h2>

@if (Model.Count == 0)
{
    <div class="alert alert-info">Không có blog nào đang chờ duyệt.</div>
}
else
{
    <table class="table table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>Tiêu đề</th>
                <th>Tác giả</th>
                <th>Ảnh Thumbnail</th>
                <th>Nội dung</th>
                <th>Ngày tạo</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var blog in Model)
            {
                <tr>
                    <td>@blog.Title</td>
                    <td>@blog.AuthorName</td>
                    <td>
                        @if (!string.IsNullOrEmpty(blog.ThumbnailUrl))
                        {
                            <img src="@blog.ThumbnailUrl" alt="Thumbnail" style="width: 80px; height: auto;" />
                        }
                        else
                        {
                            <span>Không có ảnh</span>
                        }
                    </td>
                    <td>
                        <a asp-controller="Manager" asp-action="BlogDetails" asp-route-id="@blog.Id" class="btn btn-primary btn-sm">
                            Chi tiết
                        </a>
                    </td>
                    <td>@blog.CreatedAt.ToString("dd/MM/yyyy")</td>
                    <td>
                        

                        <form asp-controller="Manager" asp-action="ApproveBlog" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@blog.Id" />
                            <button type="submit" class="btn btn-success btn-sm" onclick="return confirm('Chấp nhận blog này?');">
                                Chấp nhận
                            </button>
                        </form>

                        <form asp-controller="Manager" asp-action="RejectBlog" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@blog.Id" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Từ chối blog này?');">
                                Từ chối
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Phân trang -->
    <nav>
        <ul class="pagination justify-content-center" style="margin-top: 20px;">
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="AllBlogs" asp-route-page="@(ViewBag.CurrentPage - 1)">Previous</a>
            </li>

            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="AllBlogs" asp-route-page="@i">@i</a>
                </li>
            }

            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-action="AllBlogs" asp-route-page="@(ViewBag.CurrentPage + 1)">Next</a>
            </li>
        </ul>
    </nav>
}
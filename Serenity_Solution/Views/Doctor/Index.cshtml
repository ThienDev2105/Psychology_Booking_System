@model List<PsychologistViewModel>
@{
    ViewData["Title"] = "Doctor Page";
}

<style>
    .pagination {
        display: flex;
        justify-content: center;
        margin-top: 40px;
        gap: 5px;
    }

    .page-link {
        padding: 8px 12px;
        text-decoration: none;
        color: #333;
        background-color: #fff;
        border-radius: 4px;
        border: 1px solid #ddd;
        transition: background-color 0.3s;
    }

        .page-link:hover, .page-link.active {
            background-color: #0f5e72;
            color: white;
            border-color: #0f5e72;
        }

    .page-info {
        text-align: center;
        margin-top: 10px;
        color: #666;
        font-size: 14px;
    }
</style>


<style>
    @* * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
        color: #333;
    } *@

    

    main {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
    }

        main h2 {
            font-size: 2rem;
            margin-bottom: 1.5rem;
            color: #333;
        }

    .filters {
        display: flex;
        gap: 1rem;
        margin-bottom: 2rem;
        align-items: center;
    }

        .filters button,
        .filters select {
            padding: 0.75rem 1.5rem;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            background: white;
            cursor: pointer;
            font-size: 0.9rem;
            transition: all 0.3s ease;
        }

            .filters button:hover,
            .filters select:hover {
                border-color: #667eea;
                box-shadow: 0 2px 8px rgba(102, 126, 234, 0.1);
            }

    .doctor-list {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .doctor-card {
        background: white;
        border-radius: 12px;
        padding: 1.5rem;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
    }

        .doctor-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.12);
        }

    .doctor-info {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        flex: 1;
    }

    .doctor-avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid #f0f0f0;
    }

    .doctor-details h3 {
        font-size: 1.3rem;
        color: #333;
        margin-bottom: 0.5rem;
    }

    .doctor-details p {
        margin-bottom: 0.3rem;
        color: #666;
        font-size: 0.9rem;
    }

    .doctor-specialty {
        color: #667eea !important;
        font-weight: 600;
    }

    .doctor-description {
        color: #555 !important;
        font-style: italic;
        max-width: 400px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        margin: auto;
    }

    .doctor-price strong {
        color: #e74c3c;
        font-weight: 700;
    }

    .contact-button {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 1rem 2rem;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        white-space: nowrap;
    }

        .contact-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.3);
        }

    .no-doctors {
        text-align: center;
        padding: 3rem;
        color: #666;
        font-size: 1.1rem;
    }
</style>

<div class="search-section">
    <div class="search-container">
        <div class="search-tabs">
            <a href="/Home/Index#contact" class="tab active" style="text-decoration: none; color: inherit;">
                <h3>Đặt câu hỏi</h3>
                <p>Đặt câu hỏi với chúng tôi</p>
                
            </a>
            <div class="tab" onclick="location.href='/Test/Index';" style="cursor: pointer;">
                <h3>Kiểm tra sức khỏe nhanh</h3>
                <p>Kiểm tra nhanh tâm lý của bạn</p>
            </div>
        </div>
        <form method="get" asp-controller="Doctor" asp-action="Index" class="search-form">
            <div class="search-box">
                <i class="search-icon"><i class="fas fa-search"></i></i>
                <input type="text" name="searchString" placeholder="Search" value="@ViewBag.SearchString" />
                @* <button type="submit"></button> *@
            </div>
        </form>
    </div>
</div>

<main>
    <h2>Bác sĩ dành cho bạn</h2>
    <div class="filters">
        <form method="get" asp-action="Index">
            <button type="submit">Bộ lọc</button>
            <select name="filterType">
                <option value="">-- Chọn bộ lọc --</option>
                <option value="experience">Kinh nghiệm</option>
                <option value="priceAsc">Giá thấp đến cao</option>
                <option value="psychiatrist">Bác sĩ tâm thần</option>
                <option value="clinicalPsychologist">Nhà tâm lý học lâm sàng</option>
                <option value="counselor">Tư vấn viên tâm lý</option>
            </select>
        </form>
    </div>


    <div id="doctorContainer">
        @Html.Partial("_DoctorListPartial", Model)
    </div>

    


</main>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
        // Trong Doctor Page
    document.querySelector('.tab[href="#contact"]').addEventListener('click', function(e) {
        e.preventDefault();
        window.location.href = '/Home/Index#contact';
    });
</script>
<script>
    function loadDoctors(page) {
    const search = document.querySelector('input[name="searchString"]').value;
    const filter = document.querySelector('select[name="filterType"]').value;

        fetch(`/Doctor/GetDoctorList?searchString=${search}&filterType=${filter}&page=${page}`)
        .then(response => response.text())
        .then(html => {
            console.log(html); // <-- kiểm tra output
            document.getElementById("doctorContainer").innerHTML = html;
            document.getElementById("doctorContainer").scrollIntoView({ behavior: 'smooth' });
        });

}

</script>




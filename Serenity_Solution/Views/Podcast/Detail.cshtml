@model Serenity_Solution.Models.PodcastViewModel
@{
    ViewData["Title"] = Model.Title;
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Title - Serenity Solution</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
</head>
<body>
    <header class="site-header">
        <div class="header-container">
            <div class="logo">
                <img src="~/image/Logo/LogoSere.jpg" alt="Logo">
                <span><strong>Serenity</strong> Solution</span>
            </div>
            <nav class="main-nav">
                <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Trang chủ</a>
                <a asp-controller="Podcast" asp-action="Index" class="active">Podcast</a>
                <a class="nav-link text-dark" asp-controller="Test" asp-action="Index">Kiểm tra tâm lý</a>
                <a class="nav-link text-dark" asp-controller="Doctor" asp-action="Index">Danh sách bác sĩ</a>
            </nav>
            <div class="auth-buttons">
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="dropdown">
                        <button class="dropdown-toggle" onclick="toggleDropdown()">
                            <i class="fas fa-user-circle"></i> Hello, @User.Identity.Name
                            <i class="fas fa-caret-down"></i>
                        </button>
                        <div class="dropdown-menu" id="userDropdown">
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-controller="AdminDashboard" asp-action="ManageUser" class="dropdown-item">Dashboard</a>
                            }
                            else if (User.IsInRole("Psychologist"))
                            {
                                <a asp-controller="Account" asp-action="PsychologistProfile" class="dropdown-item">Profile</a>
                            }
                            else if (User.IsInRole("Customer"))
                            {
                                <a asp-controller="Account" asp-action="CustomerProfile" class="dropdown-item">Profile</a>
                            }
                            <div class="dropdown-divider"></div>
                            <a asp-controller="Account" asp-action="Logout" class="dropdown-item">Logout</a>
                        </div>
                    </div>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="login-link">Đăng Nhập</a>
                    <a asp-controller="Account" asp-action="Register" class="signup-btn">Đăng Ký</a>
                }
            </div>
        </div>
    </header>

    <div class="breadcrumb-container">
        <div class="breadcrumb">
            <a asp-controller="Home" asp-action="Index">Trang chủ</a> &gt;
            <a asp-controller="Podcast" asp-action="Index">Podcast</a> &gt;
            <span>@Model.Title</span>
        </div>
    </div>

    <div class="podcast-detail-container">
        <div class="podcast-player-container">
            <div class="podcast-info">
                <img src="@Model.ImageUrl" alt="@Model.Title" class="podcast-image">
                <div class="podcast-text">
                    <span class="category-tag">@Model.Category</span>
                    <h1 class="podcast-title">@Model.Title</h1>
                    <p class="podcast-author">@Model.Author</p>
                    <div class="rating">
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= Math.Floor(Model.Rating))
                            {
                                <i class="fas fa-star"></i>
                            }
                            else if (i - Model.Rating < 1 && i - Model.Rating > 0)
                            {
                                <i class="fas fa-star-half-alt"></i>
                            }
                            else
                            {
                                <i class="far fa-star"></i>
                            }
                        }
                        <span>(@Model.RatingCount)</span>
                    </div>
                    <p class="podcast-duration"><i class="far fa-clock"></i> @Model.Duration</p>
                </div>
            </div>

            <div class="audio-player">
                <audio id="audio-element" src="@Model.AudioUrl"></audio>

                <div class="controls">
                    <button class="btn-backward" id="backward-10">
                        <i class="fas fa-undo-alt"></i>
                        <span>10s</span>
                    </button>

                    <button class="btn-play" id="btn-play-pause">
                        <i class="fas fa-play" id="play-icon"></i>
                    </button>


                    <button class="btn-forward" id="forward-10">
                        <i class="fas fa-redo-alt"></i>
                        <span>10s</span>
                    </button>
                </div>

                <div class="progress-container">
                    <span id="current-time">00:00</span>
                    <div class="progress-bar">
                        <div class="progress" id="progress"></div>
                    </div>
                    <span id="duration">00:00</span>
                </div>

                <div class="volume-container">
                    <i class="fas fa-volume-up" id="volume-icon"></i>
                    <input type="range" id="volume-slider" min="0" max="1" step="0.01" value="1">
                </div>
            </div>

            <div class="podcast-description">
                <h2>Giới thiệu</h2>
                <p>@Model.Description</p>
            </div>
        </div>

        <div class="podcast-comments">
            <h2>Bình luận & Đánh giá</h2>

            <!-- Hiển thị thông báo -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">
                    @TempData["Success"]
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["Error"]
                </div>
            }

            <!-- Form thêm comment và rating -->
            @if (User.Identity.IsAuthenticated)
            {
                <form asp-action="AddComment" method="post" class="comment-form">
                    <input type="hidden" name="PodcastID" value="@Model.Id" />

                    <div class="rating-section">
                        <label>Đánh giá của bạn:</label>
                        <div class="rating-container">
                            <div class="no-rating-option">
                                <button type="button" class="no-rating-btn active" data-rating="0">Không đánh giá</button>
                            </div>
                            <div class="stars-container">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <button type="button" class="star-btn" data-rating="@i">&#9733;</button>
                                }
                            </div>
                            <input type="hidden" name="Rating" id="rating-input" value="0" />
                        </div>
                    </div>

                    <div class="comment-input">
                        <textarea name="CommentContent" placeholder="Viết nhận xét tại đây..." required></textarea>
                        <button type="submit" class="btn-submit">Gửi bình luận</button>
                    </div>
                </form>
            }
            else
            {
                <div class="login-prompt">
                    <p>Vui lòng <a asp-controller="Account" asp-action="Login">đăng nhập</a> để bình luận và đánh giá.</p>
                </div>
            }

            <!-- Hiển thị danh sách comment -->
            <div class="comments-list">
                @{
                    var allComments = ViewBag.Comments as List<CommentViewModel>;
                    var comments = allComments?.Where(c => c.ParentCommentId == null)
                    .OrderByDescending(c => c.DateComment)
                    .ToList() ?? new List<CommentViewModel>();
                }

                @if (comments.Any())
                {
                    @foreach (var comment in comments)
                    {
                        <div class="comment-item">
                            <div class="comment-header">
                                <div class="user-info">
                                    <img src="@comment.UserAvatar" alt="@comment.UserName" class="user-avatar">
                                    <div class="user-details">
                                        <span class="username">@comment.UserName</span>
                                        <span class="comment-date">@comment.DateComment.ToString("dd/MM/yyyy HH:mm")</span>
                                    </div>
                                </div>
                                @if (comment.Rating > 0)
                                {
                                    <div class="comment-rating">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= comment.Rating)
                                            {
                                                <i class="fas fa-star"></i>
                                            }
                                            else
                                            {
                                                <i class="far fa-star"></i>
                                            }
                                        }
                                    </div>
                                }
                            </div>
                            <div class="comment-content">
                                <p>@comment.CommentContent</p>
                            </div>
                            <div class="comment-actions">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <button class="btn-reply" onclick="showReplyForm(@comment.CommetId)">
                                        <i class="fas fa-reply"></i> Trả lời
                                    </button>
                                }
                                @if (User.Identity.IsAuthenticated && User.Identity.Name == comment.UserName)
                                {
                                    <form asp-action="DeleteComment" method="post" style="display: inline;">
                                        <input type="hidden" name="commentId" value="@comment.CommetId" />
                                        <input type="hidden" name="podcastId" value="@Model.Id" />
                                        <button type="submit" class="btn-delete" onclick="return confirm('Bạn có chắc muốn xóa comment này?')">
                                            <i class="fas fa-trash"></i> Xóa
                                        </button>
                                    </form>
                                }
                            </div>

                            <!-- Reply form (hidden by default) -->
                            @if (User.Identity.IsAuthenticated)
                            {
                                <div class="reply-form" id="reply-form-@comment.CommetId" style="display: none;">
                                    <form asp-action="AddReply" method="post">
                                        <input type="hidden" name="PodcastID" value="@Model.Id" />
                                        <input type="hidden" name="ParentCommentId" value="@comment.CommetId" />
                                        <textarea name="CommentContent" placeholder="Viết trả lời..." required></textarea>
                                        <div class="reply-actions">
                                            <button type="submit" class="btn-submit-reply">Gửi trả lời</button>
                                            <button type="button" class="btn-cancel" onclick="hideReplyForm(@comment.CommetId)">Hủy</button>
                                        </div>
                                    </form>
                                </div>
                            }

                            <!-- Replies -->
                            @{
                                var replies = allComments?.Where(c => c.ParentCommentId == comment.CommetId)
                                .OrderBy(c => c.DateComment)
                                .ToList() ?? new List<CommentViewModel>();
                            }
                            @if (replies.Any())
                            {
                                <div class="replies-container">
                                    @foreach (var reply in replies)
                                    {
                                        <div class="reply-item">
                                            <div class="reply-header">
                                                <div class="user-info">
                                                    <img src="@reply.UserAvatar" alt="@reply.UserName" class="user-avatar-small">
                                                    <div class="user-details">
                                                        <span class="username">@reply.UserName</span>
                                                        <span class="comment-date">@reply.DateComment.ToString("dd/MM/yyyy HH:mm")</span>
                                                    </div>
                                                </div>
                                                @if (User.Identity.IsAuthenticated && User.Identity.Name == reply.UserName)
                                                {
                                                    <form asp-action="DeleteComment" method="post" style="display: inline;">
                                                        <input type="hidden" name="commentId" value="@reply.CommetId" />
                                                        <input type="hidden" name="podcastId" value="@Model.Id" />
                                                        <button type="submit" class="btn-delete-small" onclick="return confirm('Bạn có chắc muốn xóa reply này?')">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                }
                                            </div>
                                            <div class="reply-content">
                                                <p>@reply.CommentContent</p>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    }
                }
                else
                {
                    <div class="no-comments">
                        <p>Chưa có bình luận nào. Hãy là người đầu tiên bình luận!</p>
                    </div>
                }
            </div>
        </div>

        <div class="related-podcasts">
            <h2>Podcast liên quan</h2>
            <div class="related-list">
                @foreach (var podcast in ViewBag.RelatedPodcasts)
                {
                    <a href="@Url.Action("Detail", "Podcast", new { id = podcast.Id })" class="related-item">
                        <img src="@podcast.ImageUrl" alt="@podcast.Title">
                        <div class="related-info">
                            <h3>@podcast.Title</h3>
                            <p>@podcast.Author • @podcast.Duration</p>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>

    <footer class="footer">
        <div class="footer-container">
            <div class="footer-column-1">
                <h2 class="logo"><span>Serenity</span> <strong>Solution</strong></h2>
                <p>
                    Chăm sóc sức khỏe tâm thần đề cập đến những nỗ lực mà các chuyên gia y tế thực hiện để phục hồi sức khỏe thể chất và tinh thần của chúng ta. Thuật ngữ này cũng bao gồm việc cung cấp các dịch vụ để duy trì sức khỏe cảm xúc. Chúng tôi gọi những người và tổ chức cung cấp các dịch vụ này là 'nhà cung cấp dịch vụ chăm sóc sức khỏe'.
                </p>
            </div>
            <div class="footer-column">
                <h3>Overview</h3>
                <ul>
                    <li><a asp-controller="Podcast" asp-action="Index">Podcast and Music</a></li>
                </ul>
            </div>
            <div class="footer-column">
                <h3>Company</h3>
                <ul>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a href="#">About us</a></li>
                </ul>
            </div>
            <div class="footer-column">
                <h3>Explore</h3>
                <ul>
                    <li><a href="#">Blogs & Feeds</a></li>
                    <li><a href="#">Privacy Police</a></li>
                </ul>
            </div>
            <div class="footer-column">
                <h3>Social Media</h3>
                <div class="social-icons">
                    <a href="https://www.facebook.com/profile.php?id=61565627854871" target="_blank" title="Facebook">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="https://www.instagram.com/" target="_blank" title="Instagram">
                        <i class="fab fa-instagram"></i>
                    </a>
                    <a href="https://www.twitter.com/" target="_blank" title="Twitter">
                        <i class="fab fa-twitter"></i>
                    </a>
                </div>

            </div>
        </div>

        <hr />
        <div class="copyright">
            Copyright Serenity Solution 2025
        </div>
    </footer>


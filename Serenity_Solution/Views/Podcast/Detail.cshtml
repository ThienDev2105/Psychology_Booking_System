        // Rating system functions
        document.addEventListener('DOMContentLoaded', function() {
            console.log('DOM loaded, initializing rating system...');

            // Đảm bảo "Không đánh giá" được chọn mặc định
            const noRatingBtn = document.querySelector('.no-rating-btn');
            const ratingInput = document.getElementById('rating-input');

            if (noRatingBtn && ratingInput) {
                noRatingBtn.classList.add('active');
                ratingInput.value = '0';
                console.log('No rating selected by default');
            }

            // Xử lý click cho "Không đánh giá"
            document.addEventListener('click', function(e) {
                if (e.target.classList.contains('no-rating-btn')) {
                    e.preventDefault();
                    console.log('No rating clicked');

                    // Remove active class from all buttons
                    document.querySelectorAll('.no-rating-btn, .star-btn').forEach(btn => {
                        btn.classList.remove('active');
                    });

                    // Add active to no rating button
                    e.target.classList.add('active');

                    // Update hidden input
                    if (ratingInput) {
                        ratingInput.value = '0';
                    }

                    updateRatingDisplay();
                }

                // Xử lý click cho stars
                if (e.target.classList.contains('star-btn')) {
                    e.preventDefault();
                    const rating = e.target.getAttribute('data-rating');
                    console.log('Star clicked:', rating);

                    // Remove active class from all buttons
                    document.querySelectorAll('.no-rating-btn, .star-btn').forEach(btn => {
                        btn.classList.remove('active');
                    });

                    // Add active class to clicked star and all stars before it
                    const starBtns = document.querySelectorAll('.star-btn');
                    starBtns.forEach((btn, index) => {
                        if (index < parseInt(rating)) {
                            btn.classList.add('active');
                        }
                    });

                    // Update hidden input
                    if (ratingInput) {
                        ratingInput.value = rating;
                    }

                    updateRatingDisplay();
                }
            });

            // Initial display update
            updateRatingDisplay();
        });

        function updateRatingDisplay() {
            const ratingInput = document.getElementById('rating-input');
            const rating = ratingInput ? parseInt(ratingInput.value) : 0;

            console.log('Current rating:', rating);

            const starBtns = document.querySelectorAll('.star-btn');
            starBtns.forEach((btn, index) => {
                if (rating === 0) {
                    btn.classList.remove('active');
                } else if (index < rating) {
                    btn.classList.add('active');
                } else {
                    btn.classList.remove('active');
                }
            });
        }
    </script>

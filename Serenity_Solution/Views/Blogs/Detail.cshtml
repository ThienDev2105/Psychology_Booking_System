@using EXE201.Commons.Models
@model Blog

<style>
    .docx-article-container {
        max-width: 800px;
        margin: 20px auto;
        background: #fff;
        padding: 20px;
        font-family: 'Arial', sans-serif;
        color: #333;
        line-height: 1.6;
    }

    .docx-divider {
        margin: 30px 0;
        border: none;
        border-top: 1px solid #ccc;
    }


</style>

<div class="docx-article-container">

    <hr class="docx-divider" />
    
    <!-- Nội dung chính -->
    <div class="docx-generated-content">
        @Html.Raw(Model.Content)
    </div>
</div>


